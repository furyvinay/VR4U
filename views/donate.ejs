<%- include('partials/header'); -%>
<div class="container my-5">
    <div class="row">
        <div class="col-8">
            <div class=" p-3 mb-2 bg-dark-subtle text-emphasis-dark rounded">
                <div class="row">
                    <div class="col">
                        <div class="row">
                            <div class="col">
                                <h3>Billing Address</h3>
                                <div class="mb-3">
                                    <label for="fname" class="form-label"><i class="fa-solid fa-person fa-lg"></i> Full Name</label>
                                    <input type="text" class="form-control" id="fname" name="firstname" placeholder="fury">
                                </div>
                                <div class="mb-3">
                                    <label for="exampleFormControlInput1" class="form-label"><i class="fa-solid fa-envelope fa-lg"></i> Email address</label>
                                    <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="vignan@example.com">
                                </div>    
                                <div class="mb-3">
                                    <label for="adr" class="form-label"><i class="fa-sharp fa-regular fa-address-card fa-lg"></i> Address</label>
                                    <input type="text" class="form-control" placeholder="duvvada">
                                </div>
                                <div class="mb-3">
                                    <label for="city" class="form-label"><i class="fa-solid fa-tree-city"></i> City</label>
                                    <input type="text" class="form-control" placeholder="vizag">
                                </div>
    
                                <div class="row">
                                    <div class="col">
                                        <label for="state" class="form-label">State</label>
                                        <input type="text" id="state" name="state" placeholder="AP" class="form-control">
                                    </div>
                                    <div class="col">
                                        <label for="zip" class="form-label" ><i class="fa-solid fa-code"></i> Zip</label>
                                        <input type="text" id="zip" name="zip" placeholder="10001" class="form-control">
                                    </div>
                                </div>
    
                                <div class="form-check my-4">
                                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                <label class="form-check-label " for="flexCheckDefault">
                                    Shipping address same as billing
                                </label>
                                </div>
                                
                            </div>
    
                                <div class="col">
                                    <h3>Payment</h3>
                                    <label for="fname" class="form-label">Accepted Cards</label>
                                    <div class="container">
                                        <i class="fa-brands fa-cc-visa fa-2xl" style="color:rgb(43, 0, 255);"></i>
                                        <i class="fa-brands fa-cc-amex fa-2xl" style="color:rgb(139, 50, 207);"></i>
                                        <i class="fa-brands fa-cc-mastercard fa-2xl" style="color:rgb(255, 0, 0);"></i>
                                        <i class="fa-brands fa-cc-discover fa-2xl" style="color:orange;"></i>
                                    </div>
                                    <div class="mb-3">
                                        <label for="cname" class="form-label">Name on Card</label>
                                        <input class="form-control" type="text" id="cname" name="cardname" placeholder="fury">
                                    </div>
                                    <div class="mb-3">
                                        <label for="ccnum" class="form-label">Credit card number</label>
                                        <input class="form-control" type="text" id="ccnum" name="cardnumber" placeholder="1111-2222-3333-4444">
                                    </div>
                                    <div class="mb-3">
                                        <label for="expmonth" class="form-label">Exp Month</label>
                                        <input class="form-control" type="text" id="expmonth" name="expmonth" placeholder="September">
                                    </div>
    
    
                                    <div class="row">
                                        <div class="col">
                                            <label for="expyear" class="form-label">Exp Year</label>
                                            <input class="form-control" type="text" id="expyear" name="expyear" placeholder="2026">
                                        </div>
                                        <div class="col">
                                            <label for="cvv" class="form-label">CVV</label>
                                        <input class="form-control" type="text" id="cvv" name="cvv" placeholder="352">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <button type="button" class="btn btn-success my-3 btn-lg">Success</button>
                </div>
            </div>
    </div>
      <div class="col">
        <div class=" p-3 mb-2 bg-dark-subtle text-emphasis-dark rounded ">
            <h3>Enter Amount</h3>
            <input class="form-control" type="number" placeholder="Enter Amount in RS">
        </div>  
      </div>
    </div>
  </div>

<%- include('partials/footer'); -%>  